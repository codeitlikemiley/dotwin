{
	"macros.list": {
		"custom1": [
			"vscode-neovim.compositeEscape1",
			// Add here more command
		]
	},
	"vscode-neovim.textDecorationsAtTop": true,
	"[blade]": {
		"editor.formatOnSave": false,
		"editor.tabSize": 4,
	},
	"better-comments.highlightPlainText": true,
	// "better-phpunit.phpunitBinary": null, // to be added
	"css.validate": false,
	"[css]": {
		"editor.formatOnSave": false,
		"editor.tabSize": 2,
	},
	"debug.openDebug": "openOnDebugBreak",
	"[dart]": {
		"editor.formatOnSave": true,
		"editor.formatOnType": true,
		"editor.rulers": [
			80
		],
		"editor.selectionHighlight": false,
		"editor.suggest.snippetsPreventQuickSuggestions": false,
		"editor.suggestSelection": "first",
		"editor.tabCompletion": "onlySnippets",
		"editor.wordBasedSuggestions": false
	},
	"dart.debugSdkLibraries": false,
	"dart.normalizeFileCasing": true,
	"dart.renameFilesWithClasses": "always",
	"dart.showSkippedTests": false,
	"emmet.includeLanguages": {
		"blade": "html",
		"vue-html": "html",
		"javascript": "javascriptreact"
	},
	"emmet.triggerExpansionOnTab": true,
	"eslint.run": "onSave",
	// this will change if we use different version of node in fnm
	"eslint.options": {
		"extensions": [
			".html",
			".js",
			".vue",
			".jsx"
		]
	},
	"eslint.validate": [
		"html",
		"vue",
		"javascript",
		"javascriptreact"
	],
	"javascript.validate.enable": true,
	"files.exclude": {
		"**.dart_tool": true,
		"**.idea": true,
		"**/*.g.dart": true,
		"**/*.inject.dart": true,
		"**/*.inject.summary": true
	},
	"files.defaultLanguage": "markdown",
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.formatOnSave": false,
		"editor.tabSize": 2,
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": false,
		"editor.tabSize": 2
	},
	// "phpcs.ignorePatterns": [
	// 	"phpcs.executablePath": "/Users/uriah/.composer/vendor/bin/phpcs",
	// 	"*/storage/",
	// 	"*/vendor/*",
	// 	"*/node_modules/*",
	// 	"*/database/*",
	// 	"*/resources/*"
	// ],
	// "phpcs.standard": "./phpcs.xml",
	"phpfmt.passes": [
        "PSR2KeywordsLowerCase",
        "PSR2LnAfterNamespace",
        "PSR2CurlyOpenNextLine",
        "PSR2ModifierVisibilityStaticOrder",
        "PSR2SingleEmptyLineAndStripClosingTag",
        "ReindentSwitchBlocks",
        "AlignConstVisibilityEquals",
        "AlignDoubleArrow",
        "AlignEquals",
        "AlignGroupDoubleArrow",
        "AutoSemicolon",
        "ClassToStatic",
        "DoubleToSingleQuote",
        "SortUseNameSpace",
        "SpaceBetweenMethods",
        "ShortArray",
        "RestoreComments",
        "OrderMethodAndVisibility",
        "ReindentAndAlignObjOps",
        "ReindentSwitchBlocks",
    ],
    "phpfmt.psr2": false,
    "phpfmt.exclude": [
        "ReindentComments",
        "StripNewlineWithinClassBody"
    ],
    "phpfmt.smart_linebreak_after_curly": true,
    "phpfmt.indent_with_space": 4,
    "phpfmt.detect_indent": false,
    "phpfmt.yoda": true,
    "[markdown]": {
        "editor.defaultFormatter": "mervin.markdown-formatter",
        "editor.formatOnSave": false,
        "editor.quickSuggestions": true,
        "editor.tabSize": 2
    },
	"phpfmt.php_bin": "/opt/homebrew/bin/php",
	"[yaml]": {
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"editor.lineNumbers": "relative",
	"editor.cursorBlinking": "solid",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorStyle": "underline",
	"editor.fontFamily": "Hack NF",
	"editor.fontLigatures": true,
	"editor.tabCompletion": "on",
	"editor.scrollBeyondLastLine": false,
	"editor.minimap.enabled": false,
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
		"source.fixAll.eslint": true
	},
	"files.autoSave": "off",
	"files.eol": "\n",
	"search.exclude": {
        ".flutter-plugins": true,
        ".flutter-plugins-dependencies": true,
        ".gitignore": true,
        ".metadata": true,
        "**/.fvm": true,
        "**/.vscode": true,
        "**/*.iml": true,
        "**/build": true,
        "**/test": true,
        "debug.log": true,
        "pubspec.lock": true
    },
    "search.mode": "newEditor",
	"terminal.integrated.cursorWidth": 2,
    "terminal.integrated.fontFamily": "Hack NF",
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml",
        "editor.formatOnSave": false,
        "editor.tabSize": 2
    },
	"workbench.colorTheme": "Pop N' Lock Theme by Luxcium ✨ Alexis's Black ⛷",
	"workbench.editor.enablePreview": false,
	"editor.renderWhitespace": "trailing",
	"files.trimTrailingWhitespace": true,
	"editor.inlineSuggest.enabled": true,
	"editor.accessibilitySupport": "off",
	"vscode-neovim.neovimExecutablePaths.win32": "C:\\Users\\uriah\\scoop\\shims\\nvim.exe",
	"vscode-neovim.neovimInitVimPaths.win32": "C:\\Users\\uriah\\AppData\\Local\\nvim\\init.vim",
	"security.workspace.trust.untrustedFiles": "open",
	"dart.openDevTools": "flutter",
	"bracket-pair-colorizer-2.depreciation-notice": false,
	"todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "svelte.enable-ts-plugin": true,
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "typescript.suggest.paths": true,
    "eslint.packageManager": "yarn",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"window.restoreWindows": "none",
	"errorLens.enabledDiagnosticLevels": [
		"error",
		"info"
	],
	"cmake.configureOnOpen": true,
	"vscode-neovim.neovimInitVimPaths.darwin": "/usr/bin/nvim",
}